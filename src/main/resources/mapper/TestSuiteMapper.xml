<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bluett.mapper.TestSuiteMapper">
    <select id="selectTestSuiteById" resultType="testSuite">
        select * from test_suite where id=#{id}
    </select>

    <select id="selectTestSuiteByIds" resultType="testSuite">
        select * from test_suite where id in 
        <foreach collection="testSuiteIds" item="testSuiteId" open="(" separator="," close=")">
            #{testSuiteId}
        </foreach>
    </select>

    <update id="updateById" parameterType="testSuite">
        update test_suite
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="description != null">description=#{description},</if>
            <if test="status != null">status=#{status},</if>
            update_time=datetime('now', '+8 hour')
        </set>
        where id=#{id}
    </update>

    <insert id="insert" parameterType="testSuite">
        insert into test_suite(name, description, status, create_time, update_time)
        values(#{name}, #{description}, #{status}, datetime('now', '+8 hour'), datetime('now', '+8 hour'))
    </insert>

    <delete id="deleteById">
        delete from test_suite where id=#{id}
    </delete>
</mapper>